@model JeCenterWeb.Models.CBlogs

@{
    ViewData["Title"] = "Article";
    Layout = "_Layout";
}
<hr />
<main>
    <div class="container-fluid marketing">

        <div class="content-block">
            <div class="section-area section-sp1">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <br />

                            <h1 class="  text-center" style="font-size:40pt;">@Model.BlogTitle</h1>
                            <br />
                            <div style="margin:auto; width:500px;">
                                <img src="~/@Model.BlogImage" alt="@Model.BlogTitle" width="100%">
                            </div>
                            
                            <br />

                            <div class="container" style="direction:rtl !important;">
                                <h2> @Model.BlogDiscretion </h2>
                                @Html.Raw(@Model.Paragraph)
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</main>

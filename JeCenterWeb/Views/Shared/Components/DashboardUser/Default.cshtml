<div class="card card-primary card-outline">
    <div class="card-body box-profile">
        <div class="text-center">
            <img class="profile-user-img img-fluid img-circle"
                 src="~/@ViewData["img"]"
                 alt="User profile picture">
        </div>

        <h3 class="profile-username text-center">@ViewData["FullName"]</h3>
        <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
                <b><i class="fa fa-phone text-primary"></i></b> <a class="float-right">@ViewData["Mobile"]</a>
            </li>
            <li class="list-group-item">
                <b><i class="fa fa-envelope text-primary"></i></b> <a class="float-right">@ViewData["Email"]</a>
            </li>
        </ul>
        <a asp-area="scp" asp-controller="Dashboard" asp-action="Profile" class="btn btn-primary btn-block"><b>  صفحتي الشخصية  </b></a>
    </div>

</div>
@model JeCenterWeb.Models.ViewModel.UpdateImageStudentUserViewModel

@{
    ViewData["Title"] = "Update Image";
}


<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("DashboardUser")

    </div>



    <div class="col-md-9">
        <div class="row">
            <form asp-action="UpdateImage" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FullName" />

                <div class="col-md-12">
                    <img src="~/@Model.oldimgurl" alt="" class="img-thumbnail" width="300px" height="300px">
                    <br />
                    <div class="form-group">
                        <div>
                            <label asp-for="imgurl" class="control-label"></label>
                            <input class="form-control" asp-for="imgurl" type="file">
                        </div>
                        <span asp-validation-for="imgurl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="حفظ" class="btn btn-info" /> |
                        <a asp-action="Index" class="btn btn-dark"> رجوع  </a>
                    </div>

                </div>

            </form>
        </div>

    </div>

</div>
@model IEnumerable<JeCenterWeb.Models.ApplicationUser>

@{
    ViewData["Title"] = "المستخدمين";
}
<div class="row">
    <div class="col-4">
        <form asp-action="SearchBy" method="get">
            <input name="word" class="form-control" placeholder="بحث" value="@ViewData["CurrentFilter"]" />
        </form>
    </div>
    <div class="col-6">
        </div>
    <div class="col-2">
        <a class="btn btn-info btn-block" asp-action="Create">إضافة </a>
    </div>
</div>
<br />
<div class="row">
  
    <div class="col-2">
        <a class="btn btn-primary btn-block" asp-action="Index" asp-route-id="4">مستخدم </a>
    </div>
    <div class="col-2">
        <a class="btn btn-warning btn-block" asp-action="Index" asp-route-id="3">مشرف</a>
    </div>
    <div class="col-2">
        <a class="btn btn-success btn-block" asp-action="Index" asp-route-id="2"> أدمن </a>
    </div>
    <div class="col-2">
        <a class="btn btn-danger btn-block" asp-action="Index" asp-route-id="1">سوبر  </a>
    </div>
    <div class="col-2">
        <a class="btn btn-dark btn-block" asp-action="Index" asp-route-id="5"> معطل </a>
    </div>
   
</div>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
            <div class="card bg-light">
                <div class="card-header text-muted border-bottom-0">
                    @if (item.Active == false)
                    {
                        <i class="fa fa-user" style="color:maroon;"></i>
                    }
                    else if (item.Active == true)
                    {
                        <i class="fa fa-user" style="color:green;"></i>
                    }

                    @if (item.UserTypeId == 3)
                    {
                        <small>خدمة طلبة</small>
                    }
                    else if (item.UserTypeId == 2)
                    {
                        <small>أدمن</small>
                    }
                    else if (item.UserTypeId == 1)
                    {
                        <small>سوبر أدمن</small>
                    }

                </div>
                <div class="card-body pt-0">
                    <div class="row">
                        <div class="col-8" style="padding:0 !important;">
                            <br />
                            <h2 class="lead" style="text-align:center !important;"><b> @item.FullName</b></h2>
                            @*  <p class="text-muted text-sm"><b>About: </b> Web Designer / UX / Graphic Artist / Coffee Lover </p>*@
                            <ul class="mb-0 fa-ul" style="padding:0 !important;">
                                <li class="small" style="text-align:left !important;"><span class="fa-li"><i class="fas fa-lg fa-key"></i></span>@item.Pwd</li>
                                <li class="small" style="text-align:left !important;"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span>@item.Email</li>
                                <li class="small" style="text-align:left !important;"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span>@item.Mobile</li>
                            </ul>
                        </div>
                        <div class="col-4 text-center">
                            <br />
                            <img src="~/@item.imgurl" alt="" class="img-circle img-fluid">
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="text-right">
                        @if (item.UserTypeId == 2 || item.UserTypeId ==3)
                        {

                            <a asp-action="Aaccessright" asp-route-id="@item.Id" method="post" class="btn btn-sm btn-danger">
                                <i class="fa fa-lock"></i>
                            </a>
                        }
                        <a asp-action="Compose" asp-controller="Mailbox" asp-route-id="@item.Id" class="btn btn-sm bg-teal">
                            <i class="fa fa-comment"></i>
                        </a>
                        <a asp-action="UpdateImage" asp-route-id="@item.Id" class="btn btn-sm bg-warning">
                            <i class="fa fa-image"></i>
                        </a>
                        <a asp-action="ChangePassword" asp-route-id="@item.Id" class="btn btn-sm bg-info">
                            <i class="fa fa-key"></i>
                        </a>
                        
                        @if (item.AdvancedPermission == true)
                        {
                            <a asp-action="ChangeRole" asp-route-id="@item.Id" class="btn btn-sm bg-yellow">
                                <i class="fa fa-star"></i>
                            </a>
                        }
                        else if (item.AdvancedPermission == false)
                        {
                            <a asp-action="ChangeRole" asp-route-id="@item.Id" class="btn btn-sm bg-pink">
                                <i class="fa fa-star"></i>
                            </a>
                        }

                        @if (item.Active == true)
                        {

                            <a asp-action="ChangeState" asp-route-id="@item.Id" method="post" class="btn btn-sm btn-success">
                                <i class="fa fa-play"></i>
                            </a>
                        }
                        else if (item.Active == false)
                        {
                            <a asp-action="ChangeState" asp-route-id="@item.Id" method="post" class="btn btn-sm btn-danger">
                                <i class="fa fa-pause"></i>
                            </a>
                        }
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="fas fa-edit"></i>
                        </a>

                       
                    </div>
                </div>
            </div>
        </div>
    }
</div>

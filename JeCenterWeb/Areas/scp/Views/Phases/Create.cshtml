@model JeCenterWeb.Models.ViewModel.PhasesViewModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhaseName" class="control-label"></label>
                <input asp-for="PhaseName" class="form-control" />
                <span asp-validation-for="PhaseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <label asp-for="imgurl" class="control-label"></label>
                    <input class="form-control" asp-for="imgurl" type="file">
                </div>
                <span asp-validation-for="imgurl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationValue" class="control-label"></label>
                <input asp-for="ApplicationValue" class="form-control" />
                <span asp-validation-for="ApplicationValue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-info" /> |
                <a class="btn btn-dark" asp-action="Index"> رجوع </a>
            </div>
        </form>
    </div>
</div>


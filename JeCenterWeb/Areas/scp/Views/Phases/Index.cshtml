@model IEnumerable<JeCenterWeb.Models.CPhases>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-info" asp-action="Create">إضافة</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-12 col-sm-6 col-md-3">
            <div class="card card-info card-outline">
                <div class="card-body box-profile">
                    <div class="text-center">
                        <img class="profile-user-img img-fluid img-circle"
                         src="~/@item.imgurl"
                         alt="@item.PhaseName">
                    </div>
                    <h3 class="profile-username text-center">  @item.PhaseName</h3>
                    <p class="text-muted text-center">
                        الاستمارة :  @item.ApplicationValue جنيه
                    </p>
                    <div class="row">
                        <div class="col-6">
                            <a asp-action="SubPhase" asp-route-id="@item.PhaseId" class="btn btn-info btn-block"><b> دخول </b></a>
                        </div>   
                        <div class="col-6">
                            <a asp-action="Edit" asp-route-id="@item.PhaseId" class="btn btn-warning btn-block"><b> تعديل </b></a>
                        </div>
                    </div>
                  <br>
                    @if (item.Active == true)
                    {
                        <form asp-action="ChangeState" asp-route-id="@item.PhaseId" method="post">
                            <input type="submit" value="مفعلة" class="btn btn-success btn-block" />
                        </form>
                    }
                    else if (item.Active == false)
                    {
                        <form asp-action="ChangeState" asp-route-id="@item.PhaseId" method="post">
                            <input type="submit" value="معطلة" class="btn btn-danger btn-block" />
                        </form>
                    }
                </div>
            </div>
        </div>
    }
</div>
@model JeCenterWeb.Models.CPhases

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhaseId" />
            <div class="form-group">
                <label asp-for="PhaseName" class="control-label"></label>
                <input asp-for="PhaseName" class="form-control" />
                <span asp-validation-for="PhaseName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApplicationValue" class="control-label"></label>
                <input asp-for="ApplicationValue" class="form-control" />
                <span asp-validation-for="ApplicationValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" /> |
                <a class="btn btn-dark" asp-action="Index"> رجوع </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img class="profile-user-img img-fluid img-circle"
             src="~/@Model.imgurl"
             alt="@Model.PhaseName">
    </div>
</div>

@model IEnumerable<JeCenterWeb.Models.CSyllabus>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a class="btn btn-info" asp-action="Create"> إضافة </a>
</p>
<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SyllabusName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhaseID)
            </th>

           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-block" asp-action="Edit" asp-route-id="@item.SyllabusID">
                        @item.SyllabusName
                    </a>
                </td>
                <td>
                    <a class="btn btn-block" asp-action="Edit" asp-route-id="@item.SyllabusID">
                        @item.CPhases.PhaseName
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

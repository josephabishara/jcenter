@model JeCenterWeb.Models.CSyllabus

@{
    ViewData["Title"] = "Edit";
}


<form asp-action="Delete" asp-route-id="@Model.SyllabusID" method="post">
    <input type="hidden" name="@Model.SyllabusID" />
    <input type="submit" value="حذف" class="btn btn-danger" />
</form>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SyllabusID" />
            <div class="form-group">
                <label asp-for="SyllabusName" class="control-label"></label>
                <input asp-for="SyllabusName" class="form-control" />
                <span asp-validation-for="SyllabusName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhaseID" class="control-label"></label>
                <select asp-for="PhaseID" class="form-control select2" asp-items="ViewBag.PhaseID"></select>
                <span asp-validation-for="PhaseID" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="حقظ" class="btn btn-info" /> |
                <a class="btn btn-dark" asp-action="Index">رجوع </a>
            </div>
        </form>
    </div>
</div>


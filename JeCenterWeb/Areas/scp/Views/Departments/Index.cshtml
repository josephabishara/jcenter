@model IEnumerable<JeCenterWeb.Models.CDepartment>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a class="btn btn-info" asp-action="Create">إضافة </a>
</p>
<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-block" asp-action="Edit" asp-route-id="@item.DepartmentId">
                        @item.DepartmentName
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

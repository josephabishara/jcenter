@model IEnumerable<JeCenterWeb.Models.ViewModel.RoomScheduleViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body style="direction:rtl;" onload="window.print()">
    <div class="row">
        <div class="col-12">
            <h3>  جدول يوم  : @ViewData["date"]   </h3>
        </div>
    </div>
    <br />
    <hr />
    <div class="row">
        <div class="col-1">
            القاعة
        </div>

        <div class="col-11 text-center">
            <h4>المحاضرات </h4>
        </div>
    </div>
    <hr />
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-1">
                <h5> @item.Room.RoomName </h5>
                <p>@item.Room.Capacity</p>
            </div>

            <div class="col-11">
                <div class="row">
                    @foreach (var item2 in item.RoomGroupReviewsExamsScheduleViewModel)
                    {

                        <div class="col-2" style="padding-left:1px;">
                            <div class="card">
                                <div class="card-body">
                                    <h6>@item2.Titel </h6>
                                    <h6>@item2.PhaseName</h6>
                                    <p style="direction:rtl;">
                                        @{
                                            DateTime start = new DateTime(item2.Date.Year, item2.Date.Month, item2.Date.Day, item2.SessionStart.Hours, item2.SessionStart.Minutes, item2.SessionStart.Seconds);
                                            DateTime end = new DateTime(item2.Date.Year, item2.Date.Month, item2.Date.Day, item2.SessionEnd.Hours, item2.SessionEnd.Minutes, item2.SessionEnd.Seconds);
                                        }
                                        من : @start.ToString("hh:mm") <br> الى : @end.ToString("hh:mm")
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <hr />
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

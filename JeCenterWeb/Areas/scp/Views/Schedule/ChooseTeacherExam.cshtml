@model IEnumerable<JeCenterWeb.Models.ApplicationUser>
<div class="card-body">
    <div class="callout callout-danger">
        <h5>  <i class="fa fa-pen " style="color:maroon;"></i>  أختار المدرس لرؤية الامتحانات  </h5>
    </div>
</div>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="info-box">
                <div class="info-box-content">
                    <div class="row">
                        <div class="col-8">
                            <h5 class="info-box-text"> @item.FullName </h5>
                            <p>
                                @item.Note
                            </p>
                        </div>
                        <div class="col-4">
                            <a asp-action="CloseExam" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="fa fa-eye"></i>
                            </a>

                            <a asp-controller="Teachers" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
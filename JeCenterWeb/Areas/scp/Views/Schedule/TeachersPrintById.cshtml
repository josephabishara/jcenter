@model  JeCenterWeb.Models.ViewModel.ScheduleTeachersVIewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/cp/dist/css/adminlte.min.css">
    <style>
        table, th, td {
            border: 1px solid black;
            text-align: center;
            font-size: 18pt;
            font-family: Arial;
        }
    </style>
</head>
<body style="direction:rtl;font-family:'Times New Roman', Times, serif" onload="window.print()">
    <div class="row container">
        <div class="table-responsive">
            <table style="width:100%;">
                <thead>
                    <tr>
                        <th> المدرس</th>
                        <th>القاعة</th>
                        <th>الوقت</th>

                        <th>المرحلة</th>
                        @* <th>المجموعة</th>
                        <th>المادة</th>
                        <th>عدد الطلبة</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CGroupSchedule)
                    {
                        DateTime start = new DateTime(2023, 1, 1, item.CGroups.SessionStart.Hours, item.CGroups.SessionStart.Minutes, item.CGroups.SessionStart.Seconds);
                        DateTime end = new DateTime(2023, 1, 1, item.CGroups.SessionEnd.Hours, item.CGroups.SessionEnd.Minutes, item.CGroups.SessionEnd.Seconds);
                        <tr>
                            <td>@item.CGroups.TeacherName</td>
                            <td>@item.CGroups.CRooms.RoomName </td>
                            <td>
                                @start.ToString("hh:mm t" ,CultureInfo.CreateSpecificCulture("ar-SA")) : @end.ToString("hh:mm t" ,
                            CultureInfo.CreateSpecificCulture("ar-AE"))
                            </td>
                            <td>@item.CGroups.CSyllabus.CPhases.PhaseName</td>
                            @*   <td>@item.CGroups.GroupName</td>
                        <td>@item.CGroups.CSyllabus.SyllabusName</td>
                        <td>@item.CGroups.StudentGroup.Count</td>*@
                        </tr>
                    }

                    @foreach (var item in Model.ReviewsSchedule)
                    {
                        DateTime start = new DateTime(2023, 1, 1, item.SessionStart.Hours, item.SessionStart.Minutes, item.SessionStart.Seconds);
                        DateTime end = new DateTime(2023, 1, 1, item.SessionEnd.Hours, item.SessionEnd.Minutes, item.SessionEnd.Seconds);
                        <tr>
                            <td>@item.ReviewsScheduleName</td>
                            <td>@item.CRooms.RoomName </td>
                            <td>
                                @start.ToString("hh:mm t" ,CultureInfo.CreateSpecificCulture("ar-SA")) : @end.ToString("hh:mm t" ,
                            CultureInfo.CreateSpecificCulture("ar-AE"))
                            </td>
                            <td>@item.CSyllabus.CPhases.PhaseName</td>
                            @*   <td>@item.CGroups.GroupName</td>
                        <td>@item.CGroups.CSyllabus.SyllabusName</td>
                        <td>@item.CGroups.StudentGroup.Count</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="~/cp/plugins/jquery/jquery.min.js"></script>
    <script src="~/cp/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/cp/dist/js/adminlte.min.js"></script>
</body>
</html>

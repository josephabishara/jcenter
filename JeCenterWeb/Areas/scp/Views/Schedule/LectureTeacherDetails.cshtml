@model IEnumerable<JeCenterWeb.Models.StudentLecture>

@{
    ViewData["Title"] = "";
    Layout = null;
}
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body onload="window.print()" style="direction: rtl;">
    <div style="max-width: 400px; text-align: center;">
        <a asp-action="ReviewDetails" asp-area="scp" asp-controller="Schedule" asp-route-id="@ViewData["id"]">
            <img src="~/images/elra3ylogo150.png" width="150px" />
       </a>
       <br />
        @* scp/Schedule/ReviewDetails/1  *@

        <div class="col-6">
            <h5>
                @ViewData["lblteacher"]
            </h5>
            <p>
                @ViewData["lblappoint"]
            </p>
        </div>
        <div class="row" style="justify-content: center;">
            <div class="col-4">
                @ViewData["lblcountwithoutdisc_teacher"]
            </div>
            <div class="col-4">
                @ViewData["lbltotalwithoutdisc_teacher"]
            </div>
        </div>
        <div class="row" style="justify-content: center;">
            <div class="col-4">
                @ViewData["lblcountwithdisc_teacher"]
            </div>
            <div class="col-4">
                @ViewData["lbltotalwithdisc_teacher"]
            </div>
        </div>
        @ViewData["teacherprice"]
        <br />


        <table class="table table-striped table-sm text-center">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student.Mobile)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Paided)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Student.FullName
                        </td>
                        <td>
                            @item.Student.Mobile
                        </td>
                        <td>
                            @item.TeacherValue
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br /><br />

        @ViewData["lbltotalteacher"]

        <br />
        <br />

    </div>
</body>
</html>
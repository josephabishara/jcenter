@model IEnumerable<JeCenterWeb.Models.ReviewsSchedule>
@inject SignInManager<ApplicationUser> signInManager

@{
    ViewData["Title"] = "Reviews Schedule";
}
<div class="row">
    <div class="col-2">
        <a asp-action="CloseReview" asp-area="scp" asp-controller="Schedule" asp-route-id="@ViewData["id"]" class="btn btn-danger btn-block"> غير مغلقة </a>
    </div>
    <div class="col-2">
        <a asp-action="ClosedReview" asp-area="scp" asp-controller="Schedule" asp-route-id="@ViewData["id"]" class="btn btn-warning btn-block">  مغلقة </a>
    </div>
    <div class="col-2">
        @if (User.IsInRole("PowerUser") || User.IsInRole("AdminSettings"))
        {
            <a asp-action="PaidedReview" asp-area="scp" asp-controller="Schedule" asp-route-id="@ViewData["id"]" class="btn btn-success btn-block">  مٌسددة </a>
        }
    </div>
</div>
<br />
<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
            <th>
                اسم المراجعة
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CRooms.RoomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionEnd)
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @item.ReviewDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.ReviewsScheduleName
                </td>
                <td>
                    @item.CRooms.RoomName
                </td>
                <td>
                    @{
                        DateTime start = new DateTime(2023, 1, 1, item.SessionStart.Hours, item.SessionStart.Minutes, item.SessionStart.Seconds);
                        DateTime end = new DateTime(2023, 1, 1, item.SessionEnd.Hours, item.SessionEnd.Minutes, item.SessionEnd.Seconds);
                    }

                    @start.ToString("t")
                </td>
                <td>@end.ToString("t")</td>
                <td>@item.CountAttend</td>
                <td>
                    @if (User.IsInRole("PowerUser") || User.IsInRole("AdminSettings"))
                    {
                        <a asp-action="ReviewDetails" asp-area="scp" asp-controller="Schedule" asp-route-id="@item.ReviewsScheduleId" class="btn btn-success" style="width:200px;">تفاصيل المراجعة</a>
                    }
                </td>
            </tr>

        }
    </tbody>
</table>
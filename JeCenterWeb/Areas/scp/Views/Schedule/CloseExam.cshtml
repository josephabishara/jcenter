@model IEnumerable<JeCenterWeb.Models.ReviewsSchedule>

@{
    ViewData["Title"] = "Exam Schedule";
}
<div class="row">
    <div class="col-2">
        <a asp-action="CloseExam" asp-area="scp" asp-controller="Schedule" asp-route-id="@ViewData["id"]" class="btn btn-danger btn-block"> غير مغلق </a>
    </div>
    @if (User.IsInRole("PowerUser") || User.IsInRole("AdminSettings") || User.IsInRole("SuperUser"))
    {
        <div class="col-2">
            <a asp-action="ClosedExam" asp-area="scp" asp-controller="Schedule" asp-route-id="@ViewData["id"]" class="btn btn-warning btn-block">  مغلق </a>
        </div>
        <div class="col-2">
            <a asp-action="PaidedExam" asp-area="scp" asp-controller="Schedule" asp-route-id="@ViewData["id"]" class="btn btn-success btn-block"> مٌسدد  </a>
        </div>
    }
</div>
<br />
<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
            <th>
                اسم الامتحان
            </th>
            <th>
                المرحلة
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CRooms.RoomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SessionEnd)
            </th>
            <th>

            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>

                    @item.ReviewDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @item.ReviewsScheduleName
                </td>
                <td>
                    @item.CSyllabus.CPhases.PhaseName
                </td>
                <td>
                    @item.CRooms.RoomName
                </td>
                <td>
                    @{
                        DateTime start = new DateTime(2023, 1, 1, item.SessionStart.Hours, item.SessionStart.Minutes, item.SessionStart.Seconds);
                        DateTime end = new DateTime(2023, 1, 1, item.SessionEnd.Hours, item.SessionEnd.Minutes, item.SessionEnd.Seconds);
                    }

                    @start.ToString("t")
                </td>
                <td>@end.ToString("t")</td>
                <td>@item.CountAttend</td>
                <td>
                    @if (item.Closed == true & item.Paided == true)
                    {
                        <strong class="text-success"> تم السداد </strong>
                    }
                    else if (item.Closed == true & item.Paided == false)
                    {
                        <strong class="text-warning">مغلقة وغير ممسددة</strong>
                    }
                    else if (item.Closed == false & item.Paided == false)
                    {
                        <strong class="text-danger"> غير مغلقة  </strong>
                    }
                    else
                    {
                        <strong class="text-warning"> ممسددة وغير مغلقة</strong>
                    }
                </td>
                @if (User.IsInRole("PowerUser") || User.IsInRole("AdminSettings") || User.IsInRole("SuperUser"))
                {
                    <td>
                        <a asp-action="ReviewDetails" asp-area="scp" asp-controller="Schedule" asp-route-id="@item.ReviewsScheduleId" class="btn btn-info" style="width:200px;">تفاصيل الامتحان</a>
                    </td>
                }
            </tr>

        }
    </tbody>
</table>
@model IEnumerable<JeCenterWeb.Models.UsersNotifications>

@{
    ViewData["Title"] = "Notifications";
}

<style>
    a{
        text-decoration:none;
    }

        a:hover, a:visited, a:link, a:active {
            text-decoration: none;
        }
</style>
<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">Notifications</h3>
    </div>

    <div class="card-body p-0">

        <div class="table-responsive mailbox-messages">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>

                        <th style="width:50px;" class="text-center">

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CNotifications.NotiTitel)
                        </th>
                        <th style="width:200px;" class="text-center">
                            التاريخ
                        </th>
                        <th style="width:150px;" class="text-center">
                            الوقت
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string txtclr = "color: #000 !important;";
                        <tr>
                            <td>
                                 @if (item.Seen == false)
                                {
                                    txtclr = "color: #0072c6 !important;font-weight:bolder;";

                                }
                                else
                                {
                                    <i class="fa fa-eye"></i>
                                }
                            </td>
                            <td class="mailbox-name">
                                <a asp-action="ReadNotification" asp-controller="Discuss" asp-area="scp" asp-route-id="@item.UsersNotificationId" style="@txtclr">  @item.CNotifications.NotiTitel </a>
                            </td>
                            <td class="text-center">
                                @Convert.ToDateTime(item.CNotifications.CreatedDate).ToString("yyyy-MM-dd")
                            </td>
                            <td class="text-center">
                                @Convert.ToDateTime(item.CNotifications.CreatedDate).ToString("t")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
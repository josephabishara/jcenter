@model IEnumerable<JeCenterWeb.Models.ApplicationUser>

@{
    ViewData["Title"] = "Teachers";
}
<div class="row">
    <div class="col-2">
        <a class="btn btn-info btn-block" asp-action="Create">إضافة </a>
    </div>
    <div class="col-2">
        <a class="btn btn-success btn-block" asp-action="Index"> مدرسين مفعلين </a>
    </div>
    <div class="col-2">
        <a class="btn btn-danger btn-block" asp-action="Deactivate"> مدرسين غير مفعلين </a>
    </div>
    <div class="col-6">
        <form asp-action="SearchActiveByWord" method="get">
            <div class="row">
                <div class="col-8">
                    <input name="word" class="form-control" placeholder="بحث" value="@ViewData["CurrentFilter"]" />
                </div>
                <div class="col-4">
                    <input type="submit" value="بحث" class="btn btn-info btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img class="card-img-top" src="~/@item.imgurl" alt="@item.FullName" height="250px">
                <div class="card-body">


                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-block btn-lg">@item.FullName </a>
                </div>
            </div>
        </div>
    }

</div>

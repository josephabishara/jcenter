@model JeCenterWeb.Models.ViewModel.TeacherPageViewModel

<style>
    a, a:hover, a:focus, a:active {
        text-decoration: none;
        color: inherit;
    }
</style>
<div class="row">
    <div class="col-md-8">
        <div class="row">
            @*المناهج*@
            <div class="col-4">
                <a asp-action="Syllabus" asp-route-id="@Model.Teacher.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-pink"><i class="fa fa-book"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text"> المواد والمناهج </span>
                            <span class="info-box-number">@Model.TeacherSyllabus</span>
                        </div>
                    </div>
                </a>
            </div>
            @* خصومات الطلبة  *@
            <div class="col-4">
                <a asp-action="DiscountTeacher" asp-route-id="@Model.Teacher.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-purple"><i class="fa fa-user-minus"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text"> خصومات الطلبة </span>
                            <span class="info-box-number">@Model.TeacherDiscount</span>
                        </div>
                    </div>
                </a>
            </div>
            @*حالة المدرس*@
            <div class="col-4">
                <div class="info-box">
                    @if (Model.Teacher.Active == true)
                    {
                        <span class="info-box-icon bg-success"><i class="fa fa-play"></i></span>
                    }
                    else
                    {
                        <span class="info-box-icon bg-danger"><i class="fa fa-pause"></i></span>
                    }

                    <div class="info-box-content">
                        <form asp-action="ChangeState" asp-route-id="@Model.Teacher.Id" method="post">
                            <input type="submit" value="تغير الحالة " class="btn" />
                        </form>

                    </div>
                </div>
            </div>

        </div>
      
        <div class="row">
            @*المجموعات*@
            <div class="col-4">
                <a asp-action="Groups" asp-route-id="@Model.Teacher.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-success"><i class="fa fa-users"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">المجموعات</span>
                            <span class="info-box-number">@Model.TeacherGroup</span>
                        </div>
                    </div>
                </a>
            </div>
            @* حصص مراجعة  *@
            <div class="col-4">
                <a asp-action="Reviews" asp-route-id="@Model.Teacher.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-warning"><i class="fa fa-chalkboard-teacher"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text"> حصص مراجعة </span>
                            <span class="info-box-number">@Model.TeacherReviews</span>
                        </div>
                    </div>
                </a>
            </div>
            @* أمتحانات  *@
            <div class="col-4">
                <a asp-action="Exams" asp-route-id="@Model.Teacher.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-danger"><i class="fa fa-pen"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text"> أمتحانات </span>
                            <span class="info-box-number">@Model.TeacherExams</span>
                        </div>
                    </div>
                </a>
            </div>
         
        </div>
        <div class="row">
            @* كشف حساب  
            <div class="col-4">
                <a asp-action="Balance" asp-route-id="@Model.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-primary"><i class="fa fa-newspaper"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text"> كشف حساب </span>
                            <span class="info-box-number">@Model.TeacherTotal</span>
                        </div>
                    </div>
                </a>
            </div>*@
       
            @*  تغير الصورة  *@
            <div class="col-4">
                <a asp-action="UpdateImage" asp-route-id="@Model.Teacher.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-fuchsia"><i class="fa fa-image"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text"> تغير الصورة </span>
                            <span class="info-box-number">-</span>
                        </div>
                    </div>
                </a>
            </div>
            @*  تعديل البيانات *@
            <div class="col-4">
                <a asp-action="Edit" asp-route-id="@Model.Teacher.Id">
                    <div class="info-box">
                        <span class="info-box-icon bg-info"><i class="fa fa-book"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">تعديل بيانات </span>
                            <span class="info-box-number"></span>
                        </div>
                    </div>
                </a>
            </div>
        
        </div>



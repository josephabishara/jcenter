@model IEnumerable<JeCenterWeb.Models.ApplicationUser>

@{
    ViewData["Title"] = "Teachers";
}

<br />
<div class="row">
    <div class="col-2">
        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@ViewBag.TeacherId">
            @ViewBag.TeacherName
        </a>
    </div>
    <div class="col-2">
        <a class="btn btn-info btn-block" asp-action="CreateAssistant" asp-route-id="@ViewBag.TeacherId">إضافة </a>
    </div>
   
    <div class="col-8">
    </div>
   
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img class="card-img-top" src="~/@item.imgurl" alt="@item.FullName" height="250px">
                <div class="card-body">


                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-block btn-lg">@item.FullName </a>
                </div>
            </div>
        </div>
    }

</div>
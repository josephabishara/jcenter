@model JeCenterWeb.Models.ViewModel.EditTeacherViewModel

@{
    ViewData["Title"] = "Add Teacher";

}
<div>
    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@ViewBag.TeacherId">
        @ViewBag.TeacherName
    </a>
</div>
<br />
<form asp-action="Edit"  method="post">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id"  />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-info" /> |
                <a asp-action="Index" class="btn btn-dark"> رجوع  </a>
            </div>
        </div>
    </div>
</form>


@model IEnumerable<JeCenterWeb.Models.StudentLecture>

@{
    ViewData["Title"] = "Student Lecture";
}

<form asp-action="ApprovedCoupon" method="post">
    <div class="row">
        <input type="hidden" name="scheduleId" value="@ViewData["scheduleId"]" />
        <div class="col-2">
            <input name="Code" class="form-control" placeholder="بحث" value="@ViewData["CurrentFilter"]" autofocus />
        </div>
        <div class="col-2">
            <input type="submit" value="اعتماد" class="btn btn-success btn-block" />
        </div>
        <div class="col-8">
            <h3>@ViewData["Message"]</h3>
        </div>
    </div>
</form>
<br />
<h3>@ViewData["Head"] </h3>
<br />
<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th>
                <i class="fa fa-calendar" style="font-size:16pt"></i>
            </th>
            <th>
                <i class="fa fa-address-book" style="font-size:16pt"></i>
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Student.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentIndex)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Deleted == 1)
                    {
                        <i class="fa fa-calendar-check-o text-primary" style="font-size:16pt"></i>
                    }
                    else
                    {
                        <i class="fa fa-calendar-times-o text-danger" style="font-size:16pt"></i>
                    }

                </td>
                <td>
                    @item.StudentLectureId
                </td>
                <td>
                    @item.Student.FullName
                </td>
                <td>
                    @if (User.IsInRole("PowerUser") || User.IsInRole("AdminSettings"))
                    {
                        @item.Student.Mobile
                    }
                </td>
                <td>
                    @item.StudentIndex
                </td>
            </tr>
        }
    </tbody>
</table>

@model IEnumerable<JeCenterWeb.Models.FinancialDocuments>
@{
    ViewData["Title"] = "Treasury";
}
<div class="row">
    <div class="col-md-4">
        <h3>رصيد الخزينة : @ViewData["Balance"]</h3>
    </div>
    <div class="col-md-6">
    </div>
</div>
<br />

<form asp-action="AddTransformation" method="post" >
    <div class="row" id="myDiv">
        <div class="col-md-3">
            <input type="hidden" name="TreasuryID" value="@ViewData["TreasuryID"]" />
            <input type="hidden" name="MovementTypeId" value="@ViewData["MovementTypeId"]" />
            <input type="hidden" name="JournalEntryDate" value="@ViewData["JournalEntryDate"]" />
            <input type="hidden" name="physicalyearId" value="@ViewData["physicalyearId"]" />

            <div class="form-group">
                <label class="control-label">الخزينة</label>
                <div class="form-group">
                    <select name="AccountId" class="form-control select2" asp-items="ViewBag.AccountID" >
                        <option value="0">أختار  الخزينة</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">بيان</label>
                <input name="Note" class="form-control" value="تحويل : "  />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="control-label">الفرع</label>
                <div class="form-group">
                    <select name="BranchId" class="form-control select2" asp-items="ViewBag.BranchId" >
                        <option value="0"> الفرع  </option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label class="control-label">قيمة</label>
                <input name="Value" class="form-control text-center" value="0"  />
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label class="control-label" style="color:white;">.</label><br />
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-default">
                    توريد
                </button>
                |
                <a class="btn btn-dark" asp-action="Index"> رجوع </a>
                <div class="modal fade" id="modal-default">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"> توريد لخزينة    </h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    سوف يتم تحويل المبلغ المكتوب أدناه

                                    <br /><br /><br />
                                    <strong class="text-danger"> هل انت متأكد من تحويل المبلغ  ؟ </strong>

                                </p>
                            </div>
                            <div class="modal-footer justify-content-between">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <input type="submit" value="حفظ" class="btn btn-danger" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th></th>
            <th>
                رقم الحركة
            </th>
            <th>
                الوقت
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th style="width:70%;">
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.JournalEntryDate == DateTime.Today)
            {
                <tr>
                    <td>
                        @if (item.Receipted == false)
                        {
                            <form asp-action="DeleteTransformation" asp-route-id="@item.FinancialDocumentId" method="post">
                                <input type="submit" value="-" class="btn btn-danger" asp-action="DeleteTransformation" OnClientClick="this.disabled=true;" asp-route-id="@item.FinancialDocumentId" method="post" />
                            </form>
                        }
                    </td>
                    <td>
                        @item.FinancialDocumentId
                    </td>
                    <td>
                        @Convert.ToDateTime(item.CreatedDate).ToString("t")
                    </td>
                    <td>
                        @item.Value
                    </td>
                    <td style="width:70%;text-align:right;">
                        @item.Notes
                    </td>
                    <td>
                        @if (item.Receipted == false)
                        {
                            <span class="badge bg-warning">Pending</span>

                        }
                        else
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                    </td>
                </tr>
            }
            else if (User.IsInRole("PowerUser") || User.IsInRole("AdminSettings"))
            {
                <tr>
                    <td>
                        @if (item.Receipted == false)
                        {
                            <form asp-action="DeleteTransformation" asp-route-id="@item.FinancialDocumentId" method="post">
                                <input type="submit" value="-" class="btn btn-danger" asp-action="DeleteTransformation" OnClientClick="this.disabled=true;" asp-route-id="@item.FinancialDocumentId" method="post" />
                            </form>
                        }
                    </td>
                    <td>
                        @item.FinancialDocumentId
                    </td>
                    <td>
                        @Convert.ToDateTime(item.CreatedDate).ToString("t")
                    </td>
                    <td>
                        @item.Value
                    </td>
                    <td style="width:70%;text-align:right;">
                        @item.Notes
                    </td>
                    <td>
                        @if (item.Receipted == false)
                        {
                            <span class="badge bg-warning">Pending</span>

                        }
                        else
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<script>

    const myDiv = document.getElementById('myDiv');

    myDiv.addEventListener('dblclick', function(event) {
        event.preventDefault(); // Prevent the default action
        alert('رجاء عدم الضغط على التحويل مرتين');
    });
</script> 
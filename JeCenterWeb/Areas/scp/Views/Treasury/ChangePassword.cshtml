@model JeCenterWeb.Models.ViewModel.ChangePasswordViewModel
@{
    ViewData["Title"] = "Treasury";
}

<div class="row">
    <div class="col-4">

  
<form asp-action="ChangePassword" method="post">
    <div class="input-group mb-3">
        <input asp-for="OldPassword" class="form-control" placeholder="كلمة المرور القديمة">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input asp-for="Password" class="form-control" placeholder="كلمة المرور الجديدة">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <input asp-for="ConfirmPassword" class="form-control" placeholder="تأكيد كلمة كلمة المرور ">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <input type="submit" value=" تغير كلمة المرور " class="btn btn-primary btn-block text-center" />
           
        </div>
      
    </div>
</form>
    </div>
</div>
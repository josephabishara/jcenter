@model IEnumerable<JeCenterWeb.Models.FinancialDocuments>
@{
    ViewData["Title"] = "Treasury";
}
<div class="row">
    <div class="col-md-4">
        <h3>رصيد الخزينة : @ViewData["Balance"]</h3>
    </div>
    <div class="col-md-6">
    </div>
</div>
<br />
<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th>
                رقم الحركة
            </th>
            <th>
                الوقت
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th style="width:70%;">
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.JournalEntryDate == DateTime.Today)
            {
                <tr>
                    <td>
                        @item.FinancialDocumentId
                    </td>
                    <td>
                        @Convert.ToDateTime(item.CreatedDate).ToString("t")
                    </td>
                    <td>
                        @item.Value
                    </td>
                    <td style="width:70%;text-align:right;">
                        @item.Notes
                    </td>
                    <td>
                        @if (item.Receipted == false)
                        {
                            <form asp-action="ApproveTransformation" asp-controller="Treasury" asp-route-id="@item.FinancialDocumentId" asp-area="scp" method="post">
                                <input type="submit" value="أستلام" class="btn btn-warning btn-block" />
                            </form>
                        }
                        else
                        {
                            <span class="btn btn-success btn-block">تم الاستلام</span>

                        }
                    </td>
                </tr>
            }
            else if (User.IsInRole("PowerUser") || User.IsInRole("AdminSettings"))
            {
                <tr>
                    <td>
                        @item.FinancialDocumentId
                    </td>
                    <td>
                        @Convert.ToDateTime(item.CreatedDate).ToString("t")
                    </td>
                    <td>
                        @item.Value
                    </td>
                    <td style="width:70%;text-align:right;">
                        @item.Notes
                    </td>
                    <td>
                        @if (item.Receipted == false)
                        {
                            <form asp-action="ApproveTransformation" asp-controller="Treasury" asp-route-id="@item.FinancialDocumentId" asp-area="scp" method="post">
                                <input type="submit" value="أستلام" class="btn btn-warning btn-block" />
                            </form>
                        }
                        else
                        {
                            <span class="btn btn-success btn-block">تم الاستلام</span>

                        }
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
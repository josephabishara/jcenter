@model IEnumerable<JeCenterWeb.Models.StudentDiscount>

@{
    ViewData["Title"] = "Student Discount";
}
<div>
    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@ViewBag.id">
        @ViewBag.FullName
    </a>
</div>
<br />

@if (ViewData["Discount"] == "true")
{
    <form asp-action="AddDiscount" method="post">
        <div class="row">
            <input type="hidden" name="StudentId" value="@ViewBag.StudentId" />
            <div class="col-4">
                <div class="form-group">
                    <select name="TeacherId" class="form-control select2" asp-items="ViewBag.TeacherId">
                        <option value="0">أختار  المدرس</option>
                    </select>
                </div>
            </div>
            <div class="col-2">
                <div class="form-group">
                    <select name="LectureType" class="form-control">
                        <option value="0">مجموعة </option>
                        <option value="1">مراجعة</option>
                        <option value="2">أمتحان</option>
                    </select>
                </div>
            </div>
            <div class="col-2">
                <div class="form-group">
                    <select name="physicalyearId" class="form-control " asp-items="ViewBag.physicalyearId">
                        <option value="0">السنة الدراسية</option>
                    </select>
                </div>
            </div>
            <div class="col-2">
                <div class="form-group">
                    <input name="TeacherDiscount" class="form-control text-center" placeholder="خ مدرس" value="0" />
                </div>
            </div>
            <div class="col-2">
                <div class="form-group">
                    <input name="CenterDiscount" class="form-control text-center" placeholder="خ سنتر" value="0" />
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group">
                    <input name="Notes" class="form-control text-center" placeholder=" سبب الخصم  " value=" خصم " />
                </div>
            </div>
            <div class="col-4">
                <input type="submit" value="إضافة" class="btn btn-info btn-block" />
            </div>
        </div>

    </form>
}


<table class="table table-striped table-sm text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                نوع المحاضرة
            </th>
            <th style="width:150px;">
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teacherDiscount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CenterDiscount)
            </th>
            <th>
             الحالة
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Teacher.FullName
                </td>
                <td>
                    @if (item.LectureType == 0)
                    {
                        <span>مجموعة</span>
                    }
                    else if (item.LectureType == 1)
                    {
                        <span>مراجعة</span>
                    }
                    else if (item.LectureType == 2)
                    {
                        <span>أمتحان</span>
                    }
                </td>
                <td style="width:150px;">
                    @item.Notes
                </td>
                <td>
                    @item.Discount
                </td>
                <td>
                    @item.teacherDiscount
                </td>
                <td>
                    @item.CenterDiscount
                </td>
                <td>
                    @if(item.Active == true)
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Wait</span>
                    }
                </td>

                <td>
                    <form asp-action="DeleteDiscount" asp-route-id="@item.StudentDiscountId" method="post">
                        <input type="submit" value="-" class="btn btn-danger" asp-action="DeleteDiscount" asp-route-id="@item.StudentDiscountId" method="post" />
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
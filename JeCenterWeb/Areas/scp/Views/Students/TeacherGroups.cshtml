@model IEnumerable<JeCenterWeb.Models.CGroups>

@{
    ViewData["Title"] = "TeacherGroups";
}
<div>
    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@ViewBag.id">
        @ViewBag.FullName
    </a>
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 " style="padding:5px;">
            <div class="card">
                <div class="card-header">
                    <h4>
                          @item.GroupName
                    </h4>
                </div>
                <div class="card-body text-center">

                    <h4>
                        <strong>يوم : @item.ResourceDays.DayOfWeekName</strong>
                    </h4>
                    <p>
                    @{
                     DateTime start = new DateTime(2023, 1, 1, item.SessionStart.Hours, item.SessionStart.Minutes, item.SessionStart.Seconds);
                       DateTime end = new DateTime(2023, 1, 1, item.SessionEnd.Hours, item.SessionEnd.Minutes, item.SessionEnd.Seconds);
                     }     
                     من : @start.ToString("t")  الى : @end.ToShortTimeString()


                    </p>
                    <p> قاعة : @item.CRooms.RoomName </p>
                    <p> فرع : @item.CRooms.CBranch.BranchName </p>
                    <p> سعر الحصة : @item.LecturePrice</p>
                </div>

                <div class="card-footer">
                    <a asp-action="TeacherGroup" asp-route-id="@ViewData["id"]" asp-route-GroupId="@item.GroupId" asp-route-PhysicalyearId="@ViewData["PhysicalyearId"]" class="btn btn-info btn-block"> أحجز </a>
                </div>
            </div>
        </div>
    }
</div>
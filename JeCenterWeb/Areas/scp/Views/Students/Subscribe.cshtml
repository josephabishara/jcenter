@model JeCenterWeb.Models.StudentApplications

@{
    ViewData["Title"] = "Student Applications";
}
<div>
    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@ViewBag.id">
        @ViewBag.FullName
    </a>
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Subscribe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" value="@ViewData["id"]" />
            <div class="form-group">
                <label asp-for="PhysicalyearId" class="control-label"></label>
                <select asp-for="PhysicalyearId" class="form-control" asp-items="ViewBag.PhysicalyearId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PhaseId" class="control-label"></label>
                <select asp-for="PhaseId" class="form-control" asp-items="ViewBag.PhaseId"></select>
            </div>
            <div>
                <h4 class="text-danger"> @ViewData["message"]</h4>
            </div>
            <div class="form-group">
                <input type="submit" value="أشتراك" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="~/images/newstudent.jpg" />
    </div>
</div>
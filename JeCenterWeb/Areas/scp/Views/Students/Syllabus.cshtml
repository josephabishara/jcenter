@model IEnumerable<JeCenterWeb.Models.CSyllabus>

@{
    ViewData["Title"] = "Index";
}
<div>
    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@ViewBag.id">
        @ViewBag.FullName
    </a>
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
        if (item.CGroups.Count > 0)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-center">
                            @item.SyllabusName
                        </h4>
                    </div>
                    <div class="card-body">
                        <h5 class="text-center">
                            <i class="fa fa-graduation-cap"></i> @item.CPhases.PhaseName
                        </h5>
                        <p class="text-center">
                            <i class="fa fa-shopping-basket"></i> @item.CGroups.Count مجموعة
                        </p>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-info btn-block" asp-action="Teachers" asp-route-id="@ViewData["id"]" asp-route-SyllabusID="@item.SyllabusID" asp-route-PhaseID="@item.PhaseID" asp-route-PhysicalyearId="@ViewData["PhysicalyearId"]"> المدرسين </a>
                    </div>
                </div>
            </div>
        }
    }
</div>
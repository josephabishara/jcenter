@model JeCenterWeb.Models.ViewModel.UpdateImageStudentUserViewModel


@{
    ViewData["Title"] = "Update Image";
}
<div class="posts-section">

    <div class="post-bar" style="padding:25px;">
<form asp-action="UpdateImage" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" disabled="disabled" />
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="imgurl" class="control-label"></label>
                    <input class="form-control" asp-for="imgurl" type="file">
                </div>
                <span asp-validation-for="imgurl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-dark"> رجوع  </a>
            </div>

        </div>
        <div class="col-md-6">
            <img src="~/@Model.oldimgurl" alt="" class="img-thumbnail" width="300px" height="300px">
        </div>
    </div>

</form>
    </div>
</div>
@model JeCenterWeb.Models.StudentApplications

@{
    ViewData["Title"] = "Index";
}

<div class="posts-section">

    <div class="post-bar" style="padding:25px;">


        <div class="row">
            <div class="col-md-4">
                <img src="~/images/newstudent.jpg" />
            </div>
            <div class="col-md-2">
            </div>
            <div class="col-md-6 text-center">
                <form asp-action="Subscribe">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="control-label">دوس هنا   <i class="fa fa-hand-o-down"></i> و اختار   السنة الدراسية </label>
                        <br />
                        <br />
                        <select asp-for="PhysicalyearId" class="form-control text-center" asp-items="ViewBag.PhysicalyearId"></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">و دوس هنا   <i class="fa fa-hand-o-down"></i> و اختار  المرحلة</label>
                        <br />         <br />
                        <select asp-for="PhaseId" class="form-control text-center" asp-items="ViewBag.PhaseId"></select>
                    </div>
                    <div>
                        <h4 class="text-danger"> @ViewData["message"]</h4>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="أشتراك" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
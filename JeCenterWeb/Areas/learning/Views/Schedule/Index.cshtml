@model IEnumerable<JeCenterWeb.Models.StudentGroup>

@{
    ViewData["Title"] = "Index";
}
<div class="posts-section">
    <div class="post-bar" style="padding:25px;">
        <div class="row" style="direction:rtl;">
            <table class="table table-striped text-right">
                <thead>
                    <tr>
                        <th class="text-right">اسم المجموعة</th>
                        <th class="text-right">اليوم</th>

                        <th class="text-right">من</th>
                        <th class="text-right">الى</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        DateTime start = new DateTime(1000, 1, 1, item.CGroups.SessionStart.Hours, item.CGroups.SessionStart.Minutes, item.CGroups.SessionStart.Seconds);
                        DateTime end = new DateTime(1000, 1, 1, item.CGroups.SessionEnd.Hours, item.CGroups.SessionEnd.Minutes, item.CGroups.SessionEnd.Seconds);

                        <tr>
                            <td>@item.CGroups.GroupName </td>
                            <td>@item.CGroups.ResourceDays.DayOfWeekName </td>
                            <td>@start.ToString("t")</td>
                            <td>@end.ToString("t")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
